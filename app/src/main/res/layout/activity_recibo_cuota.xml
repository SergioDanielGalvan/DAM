<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recibo"
    tools:context=".ReciboCuotaActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Encabezado institucional -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/etiquetaverderecibo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>

    <!-- Fondo verde con tarjeta -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="#046C43">

        <!-- Barra superior -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:src="@drawable/barracarnet"
            android:layout_gravity="top"/>

        <!-- Tarjeta con datos del recibo -->
        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            android:backgroundTint="#D9D9D9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/txtNroRecibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recibo_n"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"/>

                <TextView android:id="@+id/txtNroSocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/socio_n"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:textColor="@android:color/black"/>

                <TextView android:id="@+id/txtNombreSocio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView android:id="@+id/txtApellido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apellido"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView android:id="@+id/txtNroDNI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dni"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView android:id="@+id/txtPagoRecibido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pago_recibido"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/black"/>

                <TextView android:id="@+id/txtFechaPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha_de_pago"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView android:id="@+id/txtFechaVencimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pr_ximo_vencimiento"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- Botones de acciÃ³n -->
    <Button
        android:id="@+id/btnImprimirTicket"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/imprimir_ticket"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:backgroundTint="#046C43"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/cancelar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:backgroundTint="#046C43"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/salir"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#046C43"
        android:textColor="@color/white"/>
</LinearLayout>
